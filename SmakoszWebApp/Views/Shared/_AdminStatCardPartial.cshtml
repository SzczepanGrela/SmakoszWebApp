@{
    var color = ViewData["Color"] as string ?? "primary";
    var icon = ViewData["Icon"] as string ?? "fa-question";
    var title = ViewData["Title"] as string ?? "Brak tytu≈Çu";
    var value = ViewData["Value"] as string ?? "0";
}

<div class="col-md-3 mb-3">
    <div class="card text-white bg-@color">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <div>
                    <h5 class="card-title">@title</h5>
                    <h2 class="fw-bold">@value</h2>
                </div>
                <i class="fa-solid @icon fa-2x opacity-75"></i>
            </div>
        </div>
    </div>
</div>
