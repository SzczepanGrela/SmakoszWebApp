<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smakosz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmakoszWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom box-shadow fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Smakosz 🍔</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-end">
                    <ul class="navbar-nav align-items-center">
                        <!-- Rekomendacje - zawsze widoczne dla mocka -->
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark" asp-controller="Recommendations" asp-action="Index">
                                <i class="fa-solid fa-sparkles me-1"></i>Rekomendacje
                            </a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="btn btn-primary btn-sm-block" asp-controller="Review" asp-action="Add">Dodaj Ocenę</a>
                        </li>
                        <!-- Link do panelu admina (ukryty w rzeczywistej aplikacji) -->
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">
                                <i class="fa-solid fa-shield-halved me-1"></i>Admin
                            </a>
                        </li>
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-5">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            <div class="row py-4">
                <div class="col-md-6 mb-3 mb-md-0">
                    &copy; @DateTime.Now.Year - SmakoszWebApp - Wszelkie prawa zastrzeżone
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">O nas</a> |
                    <a asp-area="" asp-controller="Home" asp-action="Terms">Regulamin</a> |
                    <a asp-area="" asp-controller="Home" asp-action="Contact">Kontakt</a>
                </div>
                <div class="col-md-3 text-md-end">
                    <a href="#" class="me-2 text-dark"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="me-2 text-dark"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-dark"><i class="fab fa-tiktok"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>