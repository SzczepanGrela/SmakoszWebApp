@model SmakoszWebApp.ViewModels.DishViewModel

<a asp-controller="Dish" asp-action="Index" asp-route-id="@Model.Id" class="text-decoration-none text-dark d-block">
    <div class="card dish-card">
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@Model.Name</h5>
            <a asp-controller="Restaurant" asp-action="Index" asp-route-id="@Model.RestaurantId"
               class="card-text text-muted mb-2 text-decoration-none">@Model.RestaurantName</a>
            <div class="mt-auto">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="fw-bold fs-5">@Model.Price.ToString("C")</span>
                    <div>
                        <i class="fa-solid fa-star text-warning"></i>
                        <span class="fw-bold">@Model.AverageRating</span>
                        <span class="text-muted">(@Model.ReviewCount)</span>
                    </div>
                </div>
                @if (Model.Tags != null && Model.Tags.Any())
                {
                    <div>
                        @foreach (var tag in Model.Tags)
                        {
                            <span class="badge bg-secondary me-1">@tag</span>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</a>