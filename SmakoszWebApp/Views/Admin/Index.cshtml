@{
    ViewData["Title"] = "Panel Administracyjny";
}

<style>
    .admin-nav-link {
        transition: all 0.3s ease;
        border-radius: 0.375rem;
        margin-bottom: 0.25rem;
        padding: 0.75rem 1rem;
    }

    .admin-nav-link:hover {
        background-color: rgba(212, 165, 116, 0.1);
        transform: translateX(5px);
    }

    .admin-nav-link.active {
        background-color: #D4A574;
        color: #FFF8DC !important;
        font-weight: 500;
    }

    .admin-nav-link.active:hover {
        background-color: #B8860B;
        transform: translateX(5px);
    }

    .admin-sidebar {
        min-height: 100vh;
        padding: 1rem;
    }

    .tab-content {
        animation: fadeInUp 0.3s ease-in-out;
    }
</style>

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 bg-light">
            <div class="admin-sidebar">
                <h4 class="text-center py-3 border-bottom">
                    <i class="fa-solid fa-shield-halved text-primary me-2"></i>
                    Admin Panel
                </h4>
                <nav class="nav flex-column">
                    <a class="nav-link active admin-nav-link" href="#dashboard" data-bs-toggle="tab" onclick="setActiveTab(this)">
                        <i class="fa-solid fa-chart-simple me-2"></i>Dashboard
                    </a>
                    <a class="nav-link admin-nav-link" href="#users" data-bs-toggle="tab" onclick="setActiveTab(this)">
                        <i class="fa-solid fa-users me-2"></i>Użytkownicy
                    </a>
                    <a class="nav-link admin-nav-link" href="#reviews" data-bs-toggle="tab" onclick="setActiveTab(this)">
                        <i class="fa-solid fa-star me-2"></i>Recenzje
                    </a>
                    <a class="nav-link admin-nav-link" href="#photos" data-bs-toggle="tab" onclick="setActiveTab(this)">
                        <i class="fa-solid fa-image me-2"></i>Zdjęcia
                    </a>
                    <a class="nav-link admin-nav-link" href="#restaurants" data-bs-toggle="tab" onclick="setActiveTab(this)">
                        <i class="fa-solid fa-utensils me-2"></i>Restauracje
                    </a>
                    <a class="nav-link admin-nav-link" href="#dishes" data-bs-toggle="tab" onclick="setActiveTab(this)">
                        <i class="fa-solid fa-bowl-food me-2"></i>Dania
                    </a>
                </nav>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10">
            <div class="tab-content">
                <!-- Dashboard -->
                <div class="tab-pane fade show active" id="dashboard">
                    <h1 class="h3 mb-4">Dashboard</h1>

                    <!-- Statystyki -->
                    <div class="row mb-4">
                        <div class="col-md-3 mb-3">
                            <div class="card text-white bg-primary">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h5 class="card-title">Użytkownicy</h5>
                                            <h2 class="fw-bold">1,234</h2>
                                        </div>
                                        <i class="fa-solid fa-users fa-2x opacity-75"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card text-white bg-success">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h5 class="card-title">Recenzje</h5>
                                            <h2 class="fw-bold">5,678</h2>
                                        </div>
                                        <i class="fa-solid fa-star fa-2x opacity-75"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card text-white bg-warning">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h5 class="card-title">Dania</h5>
                                            <h2 class="fw-bold">890</h2>
                                        </div>
                                        <i class="fa-solid fa-bowl-food fa-2x opacity-75"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card text-white bg-info">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h5 class="card-title">Restauracje</h5>
                                            <h2 class="fw-bold">123</h2>
                                        </div>
                                        <i class="fa-solid fa-utensils fa-2x opacity-75"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Oczekujące zdjęcia -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fa-solid fa-clock me-2"></i>
                                Zdjęcia oczekujące na moderację (3)
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @for (int i = 0; i < 3; i++)
                                {
                                    <div class="col-md-4 mb-3">
                                        <div class="card">
                                            <img src="https://placehold.co/300x200/ff6f61/white?text=Oczekuje" class="card-img-top" alt="Zdjęcie">
                                            <div class="card-body p-2">
                                                <small class="text-muted">Pizza Margherita - jan.kowalski</small>
                                                <div class="d-flex gap-1 mt-2">
                                                    <button class="btn btn-success btn-sm flex-fill" onclick="approvePhoto(@i)">
                                                        <i class="fa-solid fa-check"></i> Zatwierdź
                                                    </button>
                                                    <button class="btn btn-danger btn-sm flex-fill" onclick="rejectPhoto(@i)">
                                                        <i class="fa-solid fa-times"></i> Odrzuć
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Moderacja zdjęć -->
                <div class="tab-pane fade" id="photos">
                    <h1 class="h3 mb-4">Moderacja zdjęć</h1>

                    <div class="row">
                        @for (int i = 0; i < 6; i++)
                        {
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card">
                                    <img src="https://placehold.co/400x300/ff6f61/white?text=Zdjęcie+@(i + 1)" class="card-img-top" alt="Zdjęcie">
                                    <div class="card-body">
                                        <h6 class="card-title">Pizza Diavola</h6>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                Przesłane przez: jan.kowalski<br>
                                                Data: 2025-01-05 14:30
                                            </small>
                                        </p>
                                        <div class="d-flex gap-2">
                                            <button class="btn btn-success btn-sm" onclick="approvePhoto(@i)">
                                                <i class="fa-solid fa-check me-1"></i>Zatwierdź
                                            </button>
                                            <button class="btn btn-danger btn-sm" onclick="rejectPhoto(@i)">
                                                <i class="fa-solid fa-times me-1"></i>Odrzuć
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Zarządzanie użytkownikami -->
                <div class="tab-pane fade" id="users">
                    <h1 class="h3 mb-4">Zarządzanie użytkownikami</h1>

                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nazwa użytkownika</th>
                                            <th>Email</th>
                                            <th>Data rejestracji</th>
                                            <th>Status</th>
                                            <th>Akcje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            <tr>
                                                <td>@(1000 + i)</td>
                                                <td>user@(i + 1)</td>
                                                <td>user@(i + 1)@Html.Raw("@")example.com</td>
                                                <td>2025-01-@((i + 1).ToString("00"))</td>
                                                <td>
                                                    <span class="badge bg-success">Aktywny</span>
                                                </td>
                                                <td>
                                                    <button class="btn btn-warning btn-sm" onclick="blockUser(@(1000 + i))">
                                                        <i class="fa-solid fa-ban"></i> Zablokuj
                                                    </button>
                                                    <button class="btn btn-info btn-sm" onclick="resetPassword(@(1000 + i))">
                                                        <i class="fa-solid fa-key"></i> Reset hasła
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Zarządzanie recenzjami -->
                <div class="tab-pane fade" id="reviews">
                    <h1 class="h3 mb-4">Zarządzanie recenzjami</h1>

                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Danie</th>
                                            <th>Restauracja</th>
                                            <th>Użytkownik</th>
                                            <th>Ocena</th>
                                            <th>Komentarz</th>
                                            <th>Data</th>
                                            <th>Akcje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < 10; i++)
                                        {
                                            <tr>
                                                <td>@(200 + i)</td>
                                                <td>Pizza Margherita</td>
                                                <td>Pizzeria Roma</td>
                                                <td>jan.kowalski</td>
                                                <td>
                                                    <div class="text-warning">
                                                        @for (int j = 0; j < 5; j++)
                                                        {
                                                            <i class="fa-solid fa-star"></i>
                                                        }
                                                    </div>
                                                </td>
                                                <td>Świetna pizza, polecam!</td>
                                                <td>2025-01-@((i + 1).ToString("00"))</td>
                                                <td>
                                                    <button class="btn btn-danger btn-sm" onclick="deleteReview(@(200 + i))">
                                                        <i class="fa-solid fa-trash"></i> Usuń
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Zarządzanie restauracjami -->
                <div class="tab-pane fade" id="restaurants">
                    <h1 class="h3 mb-4">Zarządzanie restauracjami</h1>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Restauracje oczekujące na weryfikację</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nazwa</th>
                                            <th>Adres</th>
                                            <th>Właściciel</th>
                                            <th>Status</th>
                                            <th>Akcje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < 3; i++)
                                        {
                                            <tr>
                                                <td>@(300 + i)</td>
                                                <td>Nowa Restauracja @(i + 1)</td>
                                                <td>ul. Przykładowa @(i + 1)</td>
                                                <td>właściciel@(i + 1)</td>
                                                <td>
                                                    <span class="badge bg-warning">Oczekuje</span>
                                                </td>
                                                <td>
                                                    <button class="btn btn-success btn-sm" onclick="approveRestaurant(@(300 + i))">
                                                        <i class="fa-solid fa-check"></i> Zatwierdź
                                                    </button>
                                                    <button class="btn btn-danger btn-sm" onclick="rejectRestaurant(@(300 + i))">
                                                        <i class="fa-solid fa-times"></i> Odrzuć
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Wszystkie restauracje</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nazwa</th>
                                            <th>Adres</th>
                                            <th>Ocena</th>
                                            <th>Liczba dań</th>
                                            <th>Status</th>
                                            <th>Akcje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            <tr>
                                                <td>@(100 + i)</td>
                                                <td>Restauracja @(i + 1)</td>
                                                <td>ul. Główna @(i + 1)</td>
                                                <td>4.@(5 + i)</td>
                                                <td>@(10 + i * 2)</td>
                                                <td>
                                                    <span class="badge bg-success">Aktywna</span>
                                                </td>
                                                <td>
                                                    <button class="btn btn-primary btn-sm" onclick="viewRestaurant(@(100 + i))">
                                                        <i class="fa-solid fa-eye"></i> Zobacz
                                                    </button>
                                                    <button class="btn btn-warning btn-sm" onclick="suspendRestaurant(@(100 + i))">
                                                        <i class="fa-solid fa-pause"></i> Zawieś
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Zarządzanie daniami -->
                <div class="tab-pane fade" id="dishes">
                    <h1 class="h3 mb-4">Zarządzanie daniami</h1>

                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Zdjęcie</th>
                                            <th>Nazwa</th>
                                            <th>Restauracja</th>
                                            <th>Cena</th>
                                            <th>Ocena</th>
                                            <th>Recenzje</th>
                                            <th>Status</th>
                                            <th>Akcje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < 8; i++)
                                        {
                                            <tr>
                                                <td>@(400 + i)</td>
                                                <td>
                                                    <img src="https://placehold.co/60x60/ff6f61/white?text=D@(i+1)" class="rounded" alt="Danie">
                                                </td>
                                                <td>Danie @(i + 1)</td>
                                                <td>Restauracja @(i % 3 + 1)</td>
                                                <td>@(30 + i * 5).00 zł</td>
                                                <td>
                                                    <div class="text-warning">
                                                        @for (int j = 0; j < 4; j++)
                                                        {
                                                            <i class="fa-solid fa-star"></i>
                                                        }
                                                        <i class="fa-solid fa-star-half-stroke"></i>
                                                    </div>
                                                </td>
                                                <td>@(15 + i * 3)</td>
                                                <td>
                                                    <span class="badge bg-success">Aktywne</span>
                                                </td>
                                                <td>
                                                    <button class="btn btn-primary btn-sm" onclick="viewDish(@(400 + i))">
                                                        <i class="fa-solid fa-eye"></i> Zobacz
                                                    </button>
                                                    <button class="btn btn-warning btn-sm" onclick="editDish(@(400 + i))">
                                                        <i class="fa-solid fa-edit"></i> Edytuj
                                                    </button>
                                                    <button class="btn btn-danger btn-sm" onclick="deleteDish(@(400 + i))">
                                                        <i class="fa-solid fa-trash"></i> Usuń
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Enhanced tab management
    function setActiveTab(element) {
        // Remove active class from all nav links
        document.querySelectorAll('.admin-nav-link').forEach(link => {
            link.classList.remove('active');
        });
        
        // Add active class to clicked nav link
        element.classList.add('active');
        
        // Update URL hash without page reload
        const target = element.getAttribute('href');
        if (target) {
            window.location.hash = target;
        }
    }

    // Initialize tab based on URL hash
    document.addEventListener('DOMContentLoaded', function() {
        const hash = window.location.hash;
        if (hash) {
            const tabLink = document.querySelector(`a[href="${hash}"]`);
            if (tabLink) {
                // Remove active from all tabs
                document.querySelectorAll('.admin-nav-link').forEach(link => {
                    link.classList.remove('active');
                });
                document.querySelectorAll('.tab-pane').forEach(pane => {
                    pane.classList.remove('show', 'active');
                });
                
                // Activate the target tab
                tabLink.classList.add('active');
                const targetPane = document.querySelector(hash);
                if (targetPane) {
                    targetPane.classList.add('show', 'active');
                }
            }
        }
    });

    // Handle browser back/forward buttons
    window.addEventListener('hashchange', function() {
        const hash = window.location.hash || '#dashboard';
        const tabLink = document.querySelector(`a[href="${hash}"]`);
        if (tabLink) {
            // Trigger Bootstrap tab
            const tab = new bootstrap.Tab(tabLink);
            tab.show();
        }
    });

    function approvePhoto(photoId) {
        showAlert('success', `Zdjęcie ${photoId + 1} zostało zatwierdzone!`);
    }

    function rejectPhoto(photoId) {
        showAlert('danger', `Zdjęcie ${photoId + 1} zostało odrzucone!`);
    }

    function blockUser(userId) {
        showAlert('warning', `Użytkownik ${userId} został zablokowany!`);
    }

    function resetPassword(userId) {
        showAlert('info', `Link do resetowania hasła został wysłany do użytkownika ${userId}!`);
    }

    function deleteReview(reviewId) {
        showAlert('success', `Recenzja ${reviewId} została usunięta!`);
    }

    function approveRestaurant(restaurantId) {
        showAlert('success', `Restauracja ${restaurantId} została zatwierdzona!`);
    }

    function rejectRestaurant(restaurantId) {
        showAlert('danger', `Restauracja ${restaurantId} została odrzucona!`);
    }

    function viewRestaurant(restaurantId) {
        showAlert('info', `Przechodzenie do szczegółów restauracji ${restaurantId}...`);
    }

    function suspendRestaurant(restaurantId) {
        showAlert('warning', `Restauracja ${restaurantId} została zawieszona!`);
    }

    function viewDish(dishId) {
        showAlert('info', `Przechodzenie do szczegółów dania ${dishId}...`);
    }

    function editDish(dishId) {
        showAlert('info', `Edycja dania ${dishId}...`);
    }

    function deleteDish(dishId) {
        showAlert('danger', `Danie ${dishId} zostało usunięte!`);
    }

    function showAlert(type, message) {
        const alert = document.createElement('div');
        alert.className = `alert alert-${type} alert-dismissible fade show`;
        alert.innerHTML = `
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        document.querySelector('.container-fluid').insertBefore(alert, document.querySelector('.container-fluid').firstChild);

        setTimeout(() => alert.remove(), 3000);
    }
</script>