@model SmakoszWebApp.ViewModels.DishDetailsViewModel
@{
    ViewData["Title"] = Model.Dish.Name;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-7 mb-4">
            <img src="@Model.Dish.ImageUrl" class="img-fluid rounded shadow-lg" alt="@Model.Dish.Name">
        </div>

        <div class="col-lg-5">
            <div class="dish-details-panel">
                <h1 class="display-5 fw-bold">@Model.Dish.Name</h1>
                <a asp-controller="Restaurant" asp-action="Index" asp-route-id="@Model.Dish.RestaurantId" 
                class="h4 text-muted text-decoration-none">@Model.Dish.RestaurantName</a>
                <p class="lead">@Model.Dish.Description</p>

                <div class="d-flex align-items-center my-3">
                    <div class="stars-lg me-3">
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star-half-stroke"></i>
                    </div>
                    <span class="fw-bold fs-5">@Model.Dish.AverageRating</span>
                    <span class="text-muted ms-2">(@Model.Dish.ReviewCount opinii)</span>
                </div>

                <div class="fs-2 fw-bold my-3">
                    @Model.Dish.Price.ToString("C")
                </div>

                <div class="d-grid gap-2 d-md-flex">
                    <a asp-controller="Review" asp-action="Add" asp-route-dishId="@Model.Dish.Id" class="btn btn-primary btn-lg flex-grow-1">
                        <i class="fa-regular fa-star me-2"></i>Oceń to danie
                    </a>
                    <button class="btn btn-outline-secondary btn-lg" onclick="saveForLater(@Model.Dish.Id)">
                        <i class="fa-regular fa-bookmark me-2"></i>Zapisz na później
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Restaurant Location Card -->
    @if (Model.Restaurant != null)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card restaurant-location-card">
                    <div class="card-header">
                        <h4 class="mb-0">
                            <i class="fa-solid fa-store me-2"></i>
                            Informacje o restauracji
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h5>
                                    <a asp-controller="Restaurant" asp-action="Index" asp-route-id="@Model.Restaurant.Id" class="text-decoration-none">
                                        @Model.Restaurant.Name
                                    </a>
                                </h5>
                                <p class="text-muted mb-2">
                                    <i class="fa-solid fa-map-marker-alt me-1"></i>
                                    @Model.Restaurant.FullAddress
                                </p>
                                
                                @if (!string.IsNullOrEmpty(Model.Restaurant.Phone))
                                {
                                    <p class="mb-2">
                                        <i class="fa-solid fa-phone me-1"></i>
                                        <a href="tel:@Model.Restaurant.Phone" class="text-decoration-none">@Model.Restaurant.Phone</a>
                                    </p>
                                }
                                
                                @if (!string.IsNullOrEmpty(Model.Restaurant.Website))
                                {
                                    <p class="mb-2">
                                        <i class="fa-solid fa-globe me-1"></i>
                                        <a href="@Model.Restaurant.Website" target="_blank" class="text-decoration-none">
                                            Strona internetowa <i class="fa-solid fa-external-link-alt ms-1"></i>
                                        </a>
                                    </p>
                                }
                            </div>
                            <div class="col-md-6">
                                <div class="d-grid gap-2">
                                    <a href="@Model.Restaurant.GoogleMapsUrl" target="_blank" class="btn btn-outline-primary">
                                        <i class="fa-solid fa-map me-2"></i>Zobacz lokalizację
                                    </a>
                                    <a href="https://www.google.com/maps/dir/?api=1&destination=@Model.Restaurant.Latitude,@Model.Restaurant.Longitude" target="_blank" class="btn btn-outline-success">
                                        <i class="fa-solid fa-route me-2"></i>Wyznacz trasę
                                    </a>
                                    <a asp-controller="Restaurant" asp-action="Index" asp-route-id="@Model.Restaurant.Id" class="btn btn-primary">
                                        <i class="fa-solid fa-utensils me-2"></i>Zobacz pełne menu
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mt-5">
        <div class="col-12">
            <h2 class="mb-4">Recenzje (@Model.Reviews.Count)</h2>
            @foreach (var review in Model.Reviews)
            {
                <div class="card review-card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex">
                                <img src="@review.UserAvatarUrl" class="rounded-circle me-3" width="50" height="50" alt="@review.UserName">
                                <div>
                                    <h5 class="card-title mb-0">@review.UserName</h5>
                                    <div>
                                        <i class="fa-solid fa-star text-warning"></i>
                                        <span class="fw-bold">@review.Rating</span>
                                        <span class="text-muted ms-2">· @review.DatePosted.ToShortDateString()</span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <button class="btn btn-outline-danger btn-sm" onclick="reportReview(@review.Id)" title="Zgłoś recenzję">
                                    <i class="fa-solid fa-flag"></i>
                                </button>
                            </div>
                        </div>
                        <p class="card-text mt-3">@review.Comment</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function saveForLater(dishId) {
        // Mock function to save dish for later
        const alert = document.createElement('div');
        alert.className = 'alert alert-info alert-dismissible fade show mt-3';
        alert.innerHTML = `
            <i class="fa-solid fa-bookmark me-2"></i>
            Danie zostało zapisane na później!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        document.querySelector('.container').insertBefore(alert, document.querySelector('.container').firstChild);

        setTimeout(() => alert.remove(), 3000);
    }

    function reportReview(reviewId) {
        if (confirm('Czy na pewno chcesz zgłosić tę recenzję?')) {
            fetch('/Review/Report', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ reviewId: reviewId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const alert = document.createElement('div');
                    alert.className = 'alert alert-success alert-dismissible fade show mt-3';
                    alert.innerHTML = `
                        <i class="fa-solid fa-check me-2"></i>
                        Recenzja została zgłoszona. Dziękujemy za zgłoszenie!
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    `;
                    document.querySelector('.container').insertBefore(alert, document.querySelector('.container').firstChild);
                    setTimeout(() => alert.remove(), 5000);
                } else {
                    alert('Wystąpił błąd podczas zgłaszania recenzji.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Wystąpił błąd podczas zgłaszania recenzji.');
            });
        }
    }
</script>