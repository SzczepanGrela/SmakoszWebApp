@model SmakoszWebApp.ViewModels.RecommendationsViewModel
@{
    ViewData["Title"] = "Rekomendacje dla Ciebie";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-5 fw-bold mb-1">Rekomendacje dla Ciebie</h1>
            <p class="text-muted mb-4">Na podstawie Twoich ocen i preferencji</p>

            <div class="d-flex gap-2 mb-4">
                <button class="btn btn-primary" onclick="generateRecommendations()">
                    <i class="fa-solid fa-refresh me-2"></i>Wygeneruj nowe rekomendacje
                </button>
                <button class="btn btn-outline-secondary">
                    <i class="fa-solid fa-sliders me-2"></i>Dostosuj preferencje
                </button>
            </div>
        </div>
    </div>

    <!-- Spersonalizowane rekomendacje -->
    <section class="mb-5">
        <h2 class="h3 mb-3">
            <i class="fa-solid fa-sparkles text-warning me-2"></i>
            Idealne dla Ciebie
        </h2>
        <p class="text-muted mb-3">Collaborative Filtering wykrył, że te dania mogą Ci się spodobać</p>
        <div class="row">
            @{
                var personalizedDishes = new List<dynamic>
                {
                    new { Id = 10, Name = "Ramen Shoyu Deluxe", RestaurantName = "Noodle House Tokyo", Price = 48.00m, Rating = 4.9, Image = "https://placehold.co/300x200/ff6f61/white?text=Polecane" },
                    new { Id = 11, Name = "Sushi Dragon Roll", RestaurantName = "Sushi Master", Price = 65.00m, Rating = 4.8, Image = "https://placehold.co/300x200/2196F3/white?text=Sushi" },
                    new { Id = 12, Name = "Pad Thai Premium", RestaurantName = "Thai Garden", Price = 42.00m, Rating = 4.7, Image = "https://placehold.co/300x200/FFC107/white?text=Thai" },
                    new { Id = 13, Name = "Carbonara Truffle", RestaurantName = "Italiano", Price = 52.00m, Rating = 4.9, Image = "https://placehold.co/300x200/4CAF50/white?text=Pasta" }
                };
            }
            @for (int i = 0; i < personalizedDishes.Count; i++)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <a asp-controller="Dish" asp-action="Index" asp-route-id="@personalizedDishes[i].Id" class="text-decoration-none text-dark">
                        <div class="card dish-card position-relative">
                            <div class="position-absolute top-0 start-0 m-2">
                                <span class="badge bg-warning text-dark">95% dopasowanie</span>
                            </div>
                            <img src="@personalizedDishes[i].Image" class="card-img-top" alt="@personalizedDishes[i].Name">
                            <div class="card-body">
                                <h5 class="card-title">@personalizedDishes[i].Name</h5>
                                <p class="text-muted mb-2">@personalizedDishes[i].RestaurantName</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">@personalizedDishes[i].Price.ToString("F2") zł</span>
                                    <div>
                                        <i class="fa-solid fa-star text-warning"></i>
                                        <span class="fw-bold">@personalizedDishes[i].Rating</span>
                                    </div>
                                </div>
                                <div class="d-grid gap-2 mt-3">
                                    <button class="btn btn-sm btn-outline-primary" onclick="event.preventDefault(); event.stopPropagation(); saveForLater(@personalizedDishes[i].Id)">
                                        <i class="fa-regular fa-bookmark me-1"></i>Zapisz na później
                                    </button>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </section>

    <!-- Trendy -->
    <section class="mb-5">
        <h2 class="h3 mb-3">
            <i class="fa-solid fa-fire text-danger me-2"></i>
            Teraz popularne
        </h2>
        <div class="row">
            @{
                var trendingDishes = new List<dynamic>
                {
                    new { Id = 14, Name = "Burger BBQ Supreme", RestaurantName = "Grill Masters", Price = 45.00m, Trend = "+18% w tym tygodniu", Image = "https://placehold.co/300x200/4CAF50/white?text=BBQ" },
                    new { Id = 15, Name = "Pizza Quattro Formaggi", RestaurantName = "Pizzeria Roma", Price = 41.00m, Trend = "+15% w tym tygodniu", Image = "https://placehold.co/300x200/ff6f61/white?text=Pizza" },
                    new { Id = 16, Name = "Fish & Chips Classic", RestaurantName = "Burgerownia Stacja", Price = 38.00m, Trend = "+12% w tym tygodniu", Image = "https://placehold.co/300x200/2196F3/white?text=Fish" }
                };
            }
            @for (int i = 0; i < trendingDishes.Count; i++)
            {
                <div class="col-lg-4 mb-4">
                    <a asp-controller="Dish" asp-action="Index" asp-route-id="@trendingDishes[i].Id" class="text-decoration-none text-dark">
                        <div class="card dish-card">
                            <img src="@trendingDishes[i].Image" class="card-img-top" alt="@trendingDishes[i].Name">
                            <div class="card-body">
                                <h5 class="card-title">@trendingDishes[i].Name</h5>
                                <p class="text-muted mb-2">@trendingDishes[i].RestaurantName</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">@trendingDishes[i].Price.ToString("F2") zł</span>
                                    <div>
                                        <i class="fa-solid fa-arrow-trend-up text-success me-1"></i>
                                        <span class="text-success fw-bold">@trendingDishes[i].Trend</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </section>

    <!-- Podobni użytkownicy polecają -->
    <section class="mb-5">
        <h2 class="h3 mb-3">
            <i class="fa-solid fa-users text-info me-2"></i>
            Użytkownicy o podobnym guście polecają
        </h2>
        <div class="row">
            @{
                var similarUsersRecommendations = new List<dynamic>
                {
                    new { Id = 17, Name = "Sushi Salmon", RestaurantName = "Sushi Master", Price = 32m, Rating = 4.7, Image = "https://placehold.co/200x150/2196F3/white?text=Sushi" },
                    new { Id = 18, Name = "Tacos Al Pastor", RestaurantName = "Thai Garden", Price = 28m, Rating = 4.6, Image = "https://placehold.co/200x150/FFC107/white?text=Tacos" },
                    new { Id = 19, Name = "Pho Bo Vietnam", RestaurantName = "Noodle House Tokyo", Price = 35m, Rating = 4.8, Image = "https://placehold.co/200x150/4CAF50/white?text=Pho" },
                    new { Id = 20, Name = "Biryani Chicken", RestaurantName = "Thai Garden", Price = 39m, Rating = 4.7, Image = "https://placehold.co/200x150/FF9800/white?text=Biryani" },
                    new { Id = 21, Name = "Gyros Greek", RestaurantName = "Italiano", Price = 26m, Rating = 4.5, Image = "https://placehold.co/200x150/9C27B0/white?text=Gyros" },
                    new { Id = 22, Name = "Kebab Turkish", RestaurantName = "Grill Masters", Price = 24m, Rating = 4.4, Image = "https://placehold.co/200x150/795548/white?text=Kebab" }
                };
            }
            @for (int i = 0; i < similarUsersRecommendations.Count; i++)
            {
                <div class="col-lg-2 col-md-4 col-6 mb-3">
                    <a asp-controller="Dish" asp-action="Index" asp-route-id="@similarUsersRecommendations[i].Id" class="text-decoration-none text-dark">
                        <div class="card dish-card-small">
                            <img src="@similarUsersRecommendations[i].Image" class="card-img-top" alt="@similarUsersRecommendations[i].Name">
                            <div class="card-body p-2">
                                <h6 class="card-title mb-1">@similarUsersRecommendations[i].Name</h6>
                                <small class="text-muted">@similarUsersRecommendations[i].RestaurantName</small>
                                <div class="d-flex justify-content-between align-items-center mt-1">
                                    <small class="fw-bold">@similarUsersRecommendations[i].Price zł</small>
                                    <small>
                                        <i class="fa-solid fa-star text-warning"></i>
                                        @similarUsersRecommendations[i].Rating
                                    </small>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </section>
</div>

<script>
    function generateRecommendations() {
        // Mock function
        const btn = event.target;
        const originalText = btn.innerHTML;
        btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-2"></i>Generowanie...';
        btn.disabled = true;

        setTimeout(() => {
            btn.innerHTML = originalText;
            btn.disabled = false;

            // Show success message
            const alert = document.createElement('div');
            alert.className = 'alert alert-success alert-dismissible fade show';
            alert.innerHTML = `
                <i class="fa-solid fa-check-circle me-2"></i>
                Nowe rekomendacje zostały wygenerowane!
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.querySelector('.container').insertBefore(alert, document.querySelector('.container').firstChild);
        }, 2000);
    }

    function saveForLater(dishId) {
        // Mock function
        const alert = document.createElement('div');
        alert.className = 'alert alert-info alert-dismissible fade show';
        alert.innerHTML = `
            <i class="fa-solid fa-bookmark me-2"></i>
            Danie zostało zapisane na później!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        document.querySelector('.container').insertBefore(alert, document.querySelector('.container').firstChild);

        setTimeout(() => alert.remove(), 3000);
    }
</script>