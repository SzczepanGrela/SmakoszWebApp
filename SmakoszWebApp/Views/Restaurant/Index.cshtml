@model SmakoszWebApp.ViewModels.RestaurantViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="restaurant-header" style="background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('@Model.ImageUrl');">
    <div class="container text-white text-center">
        <h1 class="display-4 fw-bold">@Model.Name</h1>
        <p class="lead">@Model.Address, @Model.City</p>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h2>O nas</h2>
            <p>@Model.Description</p>
        </div>
    </div>

    <!-- Location & Contact Information -->
    <div class="row justify-content-center mt-5">
        <div class="col-lg-10">
            <div class="card location-info-card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fa-solid fa-location-dot me-2"></i>
                        Lokalizacja i kontakt
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h5><i class="fa-solid fa-map-marker-alt text-primary me-2"></i>Adres</h5>
                            <p class="mb-3">@Model.FullAddress</p>
                            
                            @if (!string.IsNullOrEmpty(Model.Phone))
                            {
                                <h5><i class="fa-solid fa-phone text-primary me-2"></i>Telefon</h5>
                                <p class="mb-3">
                                    <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                                </p>
                            }
                            
                            @if (!string.IsNullOrEmpty(Model.Website))
                            {
                                <h5><i class="fa-solid fa-globe text-primary me-2"></i>Strona internetowa</h5>
                                <p class="mb-3">
                                    <a href="@Model.Website" target="_blank" class="text-decoration-none">
                                        Odwiedź naszą stronę <i class="fa-solid fa-external-link-alt ms-1"></i>
                                    </a>
                                </p>
                            }
                        </div>
                        <div class="col-md-4">
                            <h5><i class="fa-solid fa-star text-warning me-2"></i>Ocena</h5>
                            <div class="d-flex align-items-center mb-3">
                                <div class="stars-lg me-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fa-solid fa-star @(i <= Model.AverageRating ? "text-warning" : "text-muted")"></i>
                                    }
                                </div>
                                <span class="fw-bold fs-5">@Model.AverageRating</span>
                            </div>
                            
                            <h5><i class="fa-solid fa-utensils text-primary me-2"></i>Menu</h5>
                            <p class="mb-3">@Model.Dishes.Count dań w menu</p>
                        </div>
                        <div class="col-md-4">
                            <h5><i class="fa-solid fa-directions text-primary me-2"></i>Jak dojechać</h5>
                            <div class="d-grid gap-2">
                                <a href="@Model.GoogleMapsUrl" target="_blank" class="btn btn-primary">
                                    <i class="fa-solid fa-map me-2"></i>Otwórz w Google Maps
                                </a>
                                <a href="https://www.google.com/maps/dir/?api=1&destination=@Model.Latitude,@Model.Longitude" target="_blank" class="btn btn-outline-primary">
                                    <i class="fa-solid fa-route me-2"></i>Wyznacz trasę
                                </a>
                                <button class="btn btn-outline-info" onclick="shareLocation()">
                                    <i class="fa-solid fa-share me-2"></i>Udostępnij lokalizację
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5">

    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4">Menu</h2>
        </div>
        @foreach (var dish in Model.Dishes)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <partial name="_DishCardPartial" model="dish" />
            </div>
        }
    </div>
</div>

<script>
    function shareLocation() {
        const restaurantName = '@Model.Name';
        const address = '@Model.FullAddress';
        const mapsUrl = '@Model.GoogleMapsUrl';
        
        if (navigator.share) {
            navigator.share({
                title: `${restaurantName} - Lokalizacja`,
                text: `Sprawdź lokalizację restauracji ${restaurantName} w ${address}`,
                url: mapsUrl
            }).catch(console.error);
        } else {
            // Fallback for browsers that don't support Web Share API
            const shareText = `Sprawdź lokalizację restauracji ${restaurantName} w ${address}: ${mapsUrl}`;
            navigator.clipboard.writeText(shareText).then(() => {
                const alert = document.createElement('div');
                alert.className = 'alert alert-success alert-dismissible fade show mt-3';
                alert.innerHTML = `
                    <i class="fa-solid fa-copy me-2"></i>
                    Link do lokalizacji został skopiowany do schowka!
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.querySelector('.container').insertBefore(alert, document.querySelector('.container').firstChild);
                setTimeout(() => alert.remove(), 3000);
            }).catch(() => {
                alert('Link do lokalizacji: ' + mapsUrl);
            });
        }
    }
</script>