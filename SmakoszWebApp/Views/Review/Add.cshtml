@{
    ViewData["Title"] = "Dodaj ocenę";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="fa-solid fa-star text-warning me-2"></i>
                        Dodaj ocenę
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Wybór restauracji/dania -->
                    <div class="mb-4">
                        <h5>Krok 1: Znajdź danie lub restaurację</h5>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Wyszukaj danie lub restaurację..." id="searchInput">
                            <button class="btn btn-outline-secondary" type="button" onclick="searchDishes()">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </div>

                        <!-- Wyniki wyszukiwania -->
                        <div id="searchResults" class="mt-3" style="display: none;">
                            <div class="list-group">
                                <div class="list-group-item list-group-item-action" onclick="selectDish(1, 'Pizza Margherita', 'Pizzeria Roma')">
                                    <div class="d-flex align-items-center">
                                        <img src="https://placehold.co/60x60/ff6f61/white?text=P" class="rounded me-3" alt="Pizza">
                                        <div>
                                            <h6 class="mb-1">Pizza Margherita</h6>
                                            <small class="text-muted">Pizzeria Roma</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="list-group-item list-group-item-action" onclick="selectDish(2, 'Burger Classic', 'Burgerownia')">
                                    <div class="d-flex align-items-center">
                                        <img src="https://placehold.co/60x60/4CAF50/white?text=B" class="rounded me-3" alt="Burger">
                                        <div>
                                            <h6 class="mb-1">Burger Classic</h6>
                                            <small class="text-muted">Burgerownia</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Wybrane danie -->
                    <div id="selectedDish" class="mb-4" style="display: none;">
                        <h5>Oceniasz:</h5>
                        <div class="alert alert-info">
                            <div class="d-flex align-items-center">
                                <img id="selectedDishImage" src="" class="rounded me-3" width="60" height="60" alt="">
                                <div>
                                    <h6 id="selectedDishName" class="mb-1"></h6>
                                    <small id="selectedRestaurantName" class="text-muted"></small>
                                </div>
                                <button type="button" class="btn-close ms-auto" onclick="clearSelection()"></button>
                            </div>
                        </div>
                    </div>

                    <!-- Formularz oceny -->
                    <form id="reviewForm" style="display: none;">
                        <div class="mb-4">
                            <h5>Krok 2: Oceń danie</h5>
                            <div class="text-center mb-3">
                                <div class="rating-stars" data-rating="0">
                                    <i class="fa-regular fa-star fa-2x" data-star="1"></i>
                                    <i class="fa-regular fa-star fa-2x" data-star="2"></i>
                                    <i class="fa-regular fa-star fa-2x" data-star="3"></i>
                                    <i class="fa-regular fa-star fa-2x" data-star="4"></i>
                                    <i class="fa-regular fa-star fa-2x" data-star="5"></i>
                                </div>
                                <div class="rating-text mt-2">
                                    <span id="ratingText" class="h5 text-muted">Kliknij gwiazdki, aby ocenić</span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5>Krok 3: Dodaj komentarz (opcjonalnie)</h5>
                            <textarea class="form-control" rows="4" placeholder="Opowiedz o swoich wrażeniach... Co Ci się podobało? Co można było zrobić lepiej?"></textarea>
                            <div class="form-text">Twój komentarz pomoże innym użytkownikom w dokonaniu wyboru.</div>
                        </div>

                        <div class="mb-4">
                            <h5>Krok 4: Dodaj zdjęcie (opcjonalnie)</h5>
                            <div class="upload-area border-2 border-dashed rounded p-4 text-center">
                                <i class="fa-solid fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                                <p>Przeciągnij zdjęcie tutaj lub <button type="button" class="btn btn-link p-0">wybierz plik</button></p>
                                <input type="file" class="d-none" accept="image/*" multiple>
                                <small class="text-muted">Maksymalnie 5 zdjęć, każde do 10MB</small>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="button" class="btn btn-outline-secondary me-md-2">Anuluj</button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-check me-2"></i>Opublikuj ocenę
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function searchDishes() {
        const searchResults = document.getElementById('searchResults');
        searchResults.style.display = 'block';
    }

    function selectDish(id, dishName, restaurantName) {
        // Pokaż wybrane danie
        document.getElementById('selectedDish').style.display = 'block';
        document.getElementById('selectedDishName').textContent = dishName;
        document.getElementById('selectedRestaurantName').textContent = restaurantName;
        document.getElementById('selectedDishImage').src = `https://placehold.co/60x60/ff6f61/white?text=${dishName.charAt(0)}`;

        // Pokaż formularz
        document.getElementById('reviewForm').style.display = 'block';

        // Ukryj wyniki wyszukiwania
        document.getElementById('searchResults').style.display = 'none';
    }

    function clearSelection() {
        document.getElementById('selectedDish').style.display = 'none';
        document.getElementById('reviewForm').style.display = 'none';
    }

    // Obsługa gwiazdek
    document.addEventListener('DOMContentLoaded', function() {
        const stars = document.querySelectorAll('.rating-stars i');
        const ratingContainer = document.querySelector('.rating-stars');
        const ratingText = document.getElementById('ratingText');

        const ratingLabels = [
            'Kliknij gwiazdki, aby ocenić',
            'Okropne',
            'Słabe',
            'Przeciętne',
            'Dobre',
            'Doskonałe!'
        ];

        stars.forEach((star, index) => {
            star.addEventListener('click', function() {
                const rating = index + 1;
                ratingContainer.setAttribute('data-rating', rating);
                ratingText.textContent = ratingLabels[rating];
                ratingText.className = 'h5 text-warning';

                // Update stars
                stars.forEach((s, i) => {
                    if (i < rating) {
                        s.className = 'fa-solid fa-star fa-2x text-warning';
                    } else {
                        s.className = 'fa-regular fa-star fa-2x';
                    }
                });
            });

            star.addEventListener('mouseenter', function() {
                const rating = index + 1;
                stars.forEach((s, i) => {
                    if (i < rating) {
                        s.className = 'fa-solid fa-star fa-2x text-warning';
                    } else {
                        s.className = 'fa-regular fa-star fa-2x';
                    }
                });
            });
        });

        ratingContainer.addEventListener('mouseleave', function() {
            const currentRating = parseInt(ratingContainer.getAttribute('data-rating'));
            stars.forEach((s, i) => {
                if (i < currentRating) {
                    s.className = 'fa-solid fa-star fa-2x text-warning';
                } else {
                    s.className = 'fa-regular fa-star fa-2x';
                }
            });
        });
    });

    // Obsługa formularza
    document.getElementById('reviewForm').addEventListener('submit', function(e) {
        e.preventDefault();

        // Mock submission
        const alert = document.createElement('div');
        alert.className = 'alert alert-success alert-dismissible fade show';
        alert.innerHTML = `
            <i class="fa-solid fa-check-circle me-2"></i>
            Dziękujemy! Twoja ocena została dodana i czeka na moderację.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        document.querySelector('.container').insertBefore(alert, document.querySelector('.container').firstChild);

        setTimeout(() => {
            window.location.href = '/Profile';
        }, 2000);
    });