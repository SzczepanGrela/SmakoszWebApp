@model SmakoszWebApp.ViewModels.SearchResultsViewModel
@{
    ViewData["Title"] = "Wyniki wyszukiwania";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-3">
            <div class="filters-panel">
                <h4 class="mb-3">Filtry</h4>

                <div class="mb-4">
                    <h6>Typ kuchni</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="kuchnia1">
                        <label class="form-check-label" for="kuchnia1">Włoska</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="kuchnia2">
                        <label class="form-check-label" for="kuchnia2">Amerykańska</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="kuchnia3">
                        <label class="form-check-label" for="kuchnia3">Japońska</label>
                    </div>
                </div>

                <div class="mb-4">
                    <h6>Cena</h6>
                    <input type="range" class="form-range" min="0" max="100" step="5" id="priceRange">
                    <div class="d-flex justify-content-between">
                        <span>0 zł</span>
                        <span>100+ zł</span>
                    </div>
                </div>

                <div class="mb-4">
                    <h6>Opcje dietetyczne</h6>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="dostawaSwitch">
                        <label class="form-check-label" for="dostawaSwitch">Dostawa</label>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="weganskieSwitch">
                        <label class="form-check-label" for="weganskieSwitch">Wegańskie</label>
                    </div>
                </div>
                <button class="btn btn-primary w-100">Filtruj</button>
            </div>
        </div>

        <div class="col-lg-9">
            <h3>Wyniki dla: "@Model.Query" <span class="text-muted fs-5">(@Model.ResultCount znaleziono)</span></h3>
            <hr />

            <div class="d-flex justify-content-end mb-3">
                <div class="col-md-4">
                    <select class="form-select">
                        <option selected>Sortuj: Najwyżej oceniane</option>
                        <option value="1">Cena: od najniższej</option>
                        <option value="2">Cena: od najwyższej</option>
                    </select>
                </div>
            </div>

            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4 align-items-start">
                @foreach (var dish in Model.Results)
                {
                    <div class="col">
                        <partial name="_DishCardPartial" model="dish" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>